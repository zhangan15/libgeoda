UNAME_S := $(shell uname -s)
PKG_LIBS :=
ifeq ($(UNAME_S),Darwin)
	PKG_LIBS=-L/usr/lib -lcurl -liconv ./deps/libgeoda/lib/osx/libgeoda.a ./deps/ann/lib/osx/libANN.a ./deps/gdal/2.2.4/lib/osx/libgdal.a ./deps/wx/lib/osx/libwx_baseu-3.0.a ./deps/wx/lib/osx/libwxregexu-3.0.a ./deps/geos/3.7.2/lib/osx/libgeos.a ./deps/geos/3.7.2/lib/osx/libgeos_c.a -framework IOKit -framework CoreServices -framework System -framework ApplicationServices ./deps/boost/lib/osx/libboost_thread-mt.a ./deps/boost/lib/osx/libboost_system-mt.a ./deps/boost/lib/osx/libboost_chrono-mt.a ./deps/boost/lib/osx/libboost_date_time-mt.a ./deps/boost/lib/osx/libboost_atomic-mt.a
    PKG_CXXFLAGS=-I./deps/libgeoda/include -I./deps/gdal/2.2.4/include -I./deps/ann/include -I./deps/geos/3.7.2/include -I./deps/wx/include/wx-3.0 -I./deps/wx/lib/osx/wx/include/base-unicode-static-3.0 -D_FILE_OFFSET_BITS=64
endif
ifeq ($(UNAME_S),Linux)
    PKG_CPPFLAGS=-I./deps/libgeoda/include -I./deps/gdal/2.2.4/include -I./deps/ann/include -I./deps/geos/3.7.2/include -I./deps/wx/include/wx-3.0 -I./deps/wx/lib/bionic/wx/include/base-unicode-static-3.0 -D_FILE_OFFSET_BITS=64
    PKG_LIBS=./deps/libgeoda/lib/bionic/libgeoda.a ./deps/gdal/2.2.4/lib/bionic/libgdal.a ./deps/geos/3.7.2/lib/bionic/libgeos_c.a ./deps/geos/3.7.2/lib/bionic/libgeos.a ./deps/ann/lib/bionic/libANN.a  ./deps/wx/lib/bionic/libwx_baseu-3.0.a ./deps/wx/lib/bionic/libwxregexu-3.0.a ./deps/boost/lib/bionic/libboost_system-mt.a ./deps/boost/lib/bionic/libboost_chrono-mt.a ./deps/boost/lib/bionic/libboost_date_time-mt.a ./deps/boost/lib/bionic/libboost_thread-mt.a -L/usr/lib -dt ./deps/iconv/lib/bionic/libiconv.a
